{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gemini-desktop-tauri",
  "version": "0.1.0",
  "identifier": "com.voxel.gemini-desktop-tauri",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
    
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "url": "https://gemini.google.com",
        "title": "Gemini",
        "width": 500,
        "height": 600,
        

        "decorations": false,   
        "transparent": true,   
        "shadow": true,         
        

        "alwaysOnTop": true,    
        "visible": false,       
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "drag-permission"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}